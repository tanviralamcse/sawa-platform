# Django Configuration
DJANGO_SECRET_KEY=your-secret-key-here-replace-with-actual-secret
DJANGO_DEBUG=False
DJANGO_SETTINGS_MODULE=config.vercel_settings

# Database Configuration (PostgreSQL for production)
DB_NAME=sawa_production_db
DB_USER=your_db_username
DB_PASSWORD=your_db_password
DB_HOST=your_db_host.com
DB_PORT=5432

# Vercel Specific
PYTHONPATH=backend
ALLOWED_HOSTS=.vercel.app,.now.sh

# Optional: For local development
DATABASE_URL=postgresql://user:password@localhost:5432/sawa_db

# Security (for production)
SECURE_SSL_REDIRECT=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
